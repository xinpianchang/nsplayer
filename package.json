{
  "name": "nsplayer",
  "version": "0.3.0",
  "description": "NSPlayer, a player which supports quality list of dash and hls",
  "keywords": [
    "nsplayer",
    "dash.js",
    "hls.js"
  ],
  "license": "MIT",
  "author": "tangye <tangye@xinpainchang.com> (https://github.com/tangye1234)",
  "main": "dist/cjs/index.js",
  "module": "dist/esm/index.js",
  "browser": "dist/mjs/index.mjs",
  "types": "dist/types/index.d.ts",
  "files": [
    "dist"
  ],
  "repository": "github:xinpianchang/nsplayer",
  "scripts": {
    "prebuild": "npm run test && npm run clean",
    "build": "npm run build:types && npm run build:js",
    "build:js": "rollup -c",
    "build:types": "tsc --emitDeclarationOnly",
    "clean": "rimraf dist",
    "lint": "eslint src/**/* --fix",
    "pretty": "prettier src/**/* --write",
    "prerelease": "npm run build",
    "release": "npx standard-version",
    "postrelease": "git push --follow-tags",
    "start": "rollup -c -w",
    "pretest": "npm run lint",
    "test": "jest",
    "test:cov": "npm run test -- --coverage",
    "test:watch": "npm run test -- --watch --notify",
    "types:check": "tsc --noEmit",
    "types:watch": "npm run types:check -- --watch"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "eslint --fix",
      "git add"
    ],
    "*.{json,md,yml}": [
      "prettier --write",
      "git add"
    ]
  },
  "devDependencies": {
    "@babel/cli": "^7.11.5",
    "@babel/core": "^7.11.5",
    "@babel/plugin-proposal-class-properties": "^7.10.4",
    "@babel/plugin-proposal-optional-chaining": "^7.11.0",
    "@babel/plugin-transform-runtime": "^7.11.5",
    "@babel/plugin-transform-typescript": "^7.11.0",
    "@babel/preset-env": "^7.11.5",
    "@babel/preset-typescript": "^7.10.4",
    "@commitlint/cli": "^9.1.1",
    "@commitlint/config-conventional": "^9.1.1",
    "@rollup/plugin-babel": "^5.2.1",
    "@rollup/plugin-commonjs": "^15.0.0",
    "@rollup/plugin-json": "^4.1.0",
    "@rollup/plugin-node-resolve": "^9.0.0",
    "@types/hls.js": "^0.13.1",
    "@types/jest": "^26.0.12",
    "@types/rollup-plugin-node-builtins": "^2.1.1",
    "@typescript-eslint/eslint-plugin": "^4.0.1",
    "@typescript-eslint/parser": "^4.0.1",
    "eslint": "^7.8.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-plugin-jest": "^23.20.0",
    "eslint-plugin-prettier": "^3.1.4",
    "husky": "^4.2.5",
    "jest": "^26.4.2",
    "lint-staged": "^10.2.13",
    "prettier": "^2.1.1",
    "rimraf": "^3.0.2",
    "rollup": "^2.26.11",
    "rollup-plugin-node-builtins": "^2.1.2",
    "rollup-plugin-terser": "^7.0.2",
    "serve": "^11.3.2",
    "ts-node": "^9.0.0",
    "typescript": "^3.9.7"
  },
  "dependencies": {
    "@babel/runtime": "^7.11.2",
    "@newstudios/common": "^0.2.1",
    "dashjs": "^3.1.3",
    "delegates": "^1.0.0",
    "hls.js": "^0.14.12"
  },
  "npmName": "nsplayer"
}
